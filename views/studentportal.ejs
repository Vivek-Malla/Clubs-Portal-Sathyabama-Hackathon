<form style="padding: 20px 190px 100px 190px;" action="/eventadded" method="post">
    <div class="row">
      <h4>Plan An Event</h4>
      <div class="input-group input-group-icon">
        <input type="text" placeholder="Event Title" name="event"/>
        <div class="input-icon"><i class="fa fa-envelope"></i></div>
      </div>
      <div class="input-group input-group-icon">
        <input type="text" placeholder="Club Name" name="clubname"/>
        <div class="input-icon"><i class="fa fa-envelope"></i></div>
      </div>
      <div class="input-group input-group-icon">
        <input type="text" placeholder="Faculty Coordinator" name="faculty"/>
        <div class="input-icon"><i class="fa fa-key"></i></div>
      </div>
      <div class="input-group input-group-icon">
        <input type="text" placeholder="Student Coordinator" name="student"/>
        <div class="input-icon"><i class="fa fa-key"></i></div>
      </div>
      <div class="input-group input-group-icon">
        <input type="text" placeholder="Brochure Link" name="BrochureLink"/>
        <div class="input-icon"><i class="fa fa-key"></i></div>
      </div>
      <div class="input-group input-group-icon">
        <input type="text" placeholder="Google Link" name="GoogleLink"/>
        <div class="input-icon"><i class="fa fa-key"></i></div>
      </div>
    </div>
    <div class="row">
      <div class="col-half">
        <h4>Event Date</h4>
        <div class="input-group">
          <div class="col-third">
            <input type="text" placeholder="DDMMYYYY" name="dateevent"/>
          </div>
        </div>
      </div>
      <div class="col-half">
        <h4>Mode</h4>
        <div class="input-group">
          <input id="gender-male" type="radio" name="gender" value="male"/>
          <label for="gender-male">Online</label>
          <input id="gender-female" type="radio" name="gender" value="female"/>
          <label for="gender-female">Offline</label>
        </div>
      </div>
    </div>
    <div class="row">
      <h4>Registration Fee</h4>
      <div class="input-group">
        <input id="payment-method-card" type="radio" name="payment-method" value="card" checked="true"/>
        <label for="payment-method-card"><span><i class="fa fa-cc-visa"></i>Pay</span></label>
        <input id="payment-method-paypal" type="radio" name="payment-method" value="paypal"/>
        <label for="payment-method-paypal"> <span><i class="fa fa-cc-paypal"></i>Free</span></label>
      </div>
      <div class="input-group input-group-icon">
        <input type="text" placeholder="Timings"/>
        <div class="input-icon"><i class="fa fa-credit-card"></i></div>
      </div>
      <div class="col-half">
        <div class="input-group input-group-icon">
          <input type="text" placeholder="Speaker"/>
          <div class="input-icon"><i class="fa fa-user"></i></div>
        </div>
      </div>
    </div>
    <div class="row">
      <h4>Terms and Conditions</h4>
      <div class="input-group">
        <input id="terms" type="checkbox"/>
        <label for="terms">I accept the terms and conditions for organising all event in a well detailed manner.</label>
      </div>
    </div>
    <br>
    <button type="submit" style="background-color: #9e1c3f; padding:18px 60px 18px 60px">Submit</button>
  </form>


